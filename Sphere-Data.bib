@article{BUFFINGTON201688,
title = "Measurements and an empirical model of the Zodiacal brightness as observed by the Solar Mass Ejection Imager (SMEI)",
journal = "Icarus",
volume = "272",
pages = "88 - 101",
year = "2016",
issn = "0019-1035",
doi = "https://doi.org/10.1016/j.icarus.2016.02.045",
url = "http://www.sciencedirect.com/science/article/pii/S0019103516001238",
author = "Andrew Buffington and Mario M. Bisi and John M. Clover and P. Paul Hick and Bernard V. Jackson and Thomas A. Kuchar and Stephan D. Price",
keywords = "Zodiacal light, Photometry, Interplanetary dust",
abstract = "The Solar Mass Ejection Imager (SMEI) provided near-full-sky broadband visible-light photometric maps for 8.5 years from 2003 to 2011. At a cadence of typically 14 maps per day, these each have an angular resolution of about 0.5$^\circ$ and differential photometric stability of about 1\% throughout this time. When individual bright stars are removed from the maps and an empirical sidereal background subtracted, the residue is dominated by the zodiacal light. This sky coverage enables the formation of an empirical zodiacal-light model for observations at 1 AU which summarizes the SMEI data. When this is subtracted, analysis of the ensemble of residual sky maps sets upper limits of typically 1\% for potential secular change of the zodiacal light for each of nine chosen ecliptic sky locations. An overall long-term photometric stability of 0.25\% is certified by analysis of three stable sidereal objects. Averaging the nine ecliptic results together yields a 1-$$\sigma$ upper limit of 0.3\% for zodiacal light change over this 8.5 year period."
}
