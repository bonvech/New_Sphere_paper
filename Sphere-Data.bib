@article {Falchie1600377,
	author = {Falchi, Fabio and Cinzano, Pierantonio and Duriscoe, Dan and Kyba, Christopher C. M. and Elvidge, Christopher D. and Baugh, Kimberly and Portnov, Boris A. and Rybnikova, Nataliya A. and Furgoni, Riccardo},
